---
apiVersion: v1
kind: Service
metadata:
  name: {{ name }}-frontend-service
  namespace: {{ namespace }}
  labels:
    app: {{ name }}
    tier: frontend
spec:
  type: NodePort
  ports:
    - port: {{ containerPort }}
      targetPort: {{ containerPort }}
      nodePort: {{ exposedPort }}
      protocol: TCP
  selector:
    app: {{ name }}
    tier: frontend